extends layout

block append head
    script(src="./javascripts/vendor/alexweber/jquery.sha256.min.js", type="text/javascript")
    script(src="./javascripts/signup.js", type="text/javascript")
block append body
    div.container
        header#overview.jumbotron.subhead
            h1 Get Dogears
            p.lead Keep your place on the web.
            div.subnav
                ul.nav.nav-pills
        div.row
            div#signup_container.span6
                h3 Signup
                hr
                form#signup_form
                    div.signup_field
                        label(for="user_name") Email:
                        input#user_name(type="text")
                    div.signup_field
                        label(for="password") Password:
                        input#password(type="password")
                    input#signup_submit(type="submit", value="Submit")
            div#downloads_container.span6
                h3 Download the extensions
                hr
                a(href="https://github.com/beezee/chrome-dogears") Dogears for Google Chrome